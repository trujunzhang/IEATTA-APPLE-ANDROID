<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.White.NoScrollCache"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NearRestaurant_More"
    android:orientation="horizontal">


    <com.ieatta.android.extensions.viewkit.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/Left_Image_View_Width"
        android:layout_height="@dimen/Left_Image_View_Height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:lines="1"
        android:textAppearance="@style/TitleText"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="4.0dip"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_toLeftOf="@+id/business_review_star_rating"
        android:layout_centerVertical="true" />

    <com.ieatta.android.extensions.viewkit.RatingImageView
        android:id="@+id/business_review_star_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:contentDescription="@null"
        android:src="@drawable/business_stars"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true" />

</RelativeLayout>