<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.White.NoScrollCache"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NearRestaurant_Restaurants">

    <com.ieatta.android.extensions.viewkit.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/Left_Image_View_Width"
        android:layout_height="@dimen/Left_Image_View_Height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
         />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Medium Text"
        android:textAppearance="@style/TitleText" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Medium Text"
        android:textAppearance="@style/SubtitleGrayText" />

    <TextView
        android:id="@+id/addFoodButton"
        android:layout_width="80.0dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="@string/Add_Food_Button"
        android:textColor="@color/green_money"
        android:layout_centerVertical="true"
        android:gravity="center" />

</RelativeLayout>