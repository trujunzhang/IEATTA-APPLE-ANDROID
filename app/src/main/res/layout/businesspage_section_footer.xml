<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:paddingLeft="@dimen/smallGapSize"
    android:paddingTop="@dimen/smallGapSize"
    android:paddingRight="@dimen/smallGapSize"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/footer_line"
        android:background="@color/gray_mid_light"
        android:layout_width="0.0dip"
        android:layout_height="1.0px"
        android:layout_weight="1.0" />

    <Button
        android:textAppearance="@style/StandardDarkText"
        android:layout_gravity="center_vertical"
        android:id="@+id/footer_small_button"
        android:paddingTop="@dimen/baseGapSize"
        android:paddingBottom="@dimen/baseGapSize"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseGapSize"
        android:includeFontPadding="false" />

    <Button
        android:textAppearance="@style/LargeDarkText"
        android:layout_gravity="center_vertical"
        android:id="@+id/footer_large_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smallGapSize"
        android:layout_marginRight="@dimen/smallGapSize"
        android:maxWidth="200.0dip"
        android:minWidth="175.0dip"
        android:includeFontPadding="false"
        android:drawableRight="@drawable/arrow_graphic"
        android:drawablePadding="@dimen/baseGapSize"
        android:layout_weight="1.0"
        style="@style/Widget.Button.BusinessPage" />
</LinearLayout>