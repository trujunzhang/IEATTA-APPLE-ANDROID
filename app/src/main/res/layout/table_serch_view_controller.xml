<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_dirty_snow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="0.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/LargeText"
            android:id="@+id/activity_config_host_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?smallGapSize"
            android:layout_marginRight="?smallGapSize"
            android:text="@string/Search_Title"
            android:layout_centerVertical="true" />

        <EditText
            android:textAppearance="@style/LargeText"
            android:textColor="@color/black_yoni"
            android:id="@+id/activity_config_yelp_host"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Search_Hint_Event"
            android:layout_toLeftOf="@+id/activity_config_yelp_host_clear"
            android:layout_toRightOf="@+id/activity_config_host_label" />

        <ImageView
            android:id="@+id/activity_config_yelp_host_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/table_view_controller"/>

</LinearLayout>