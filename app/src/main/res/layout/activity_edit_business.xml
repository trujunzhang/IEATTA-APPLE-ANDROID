<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/change_business_view"
    android:background="@color/white_dirty_snow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yelp="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/removable_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/name"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:emptyText="@string/business_name"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />

            <!--<TextView-->
                <!--android:text="@string/address_and_map_location"-->
                <!--style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />-->

            <!--<include layout="@layout/business_map_address" />-->

            <TextView
                android:text="@string/categories"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_categories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:emptyText="@string/add_categories"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />

            <TextView
                android:text="@string/hours"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_open_hours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:attachmentIcon="@drawable/photo_icon"
                yelp:emptyText="@string/add_hours"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />

            <TextView
                android:text="@string/phone"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:emptyText="@string/add_phone"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />

            <TextView
                android:text="@string/website"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_website"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:emptyText="@string/add_website"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />

            <TextView
                android:id="@+id/business_menu_url_title"
                android:text="@string/menu_url"
                style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

            <com.yelp.android.ui.activities.mutatebiz.Field
                android:id="@+id/business_menu_url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                yelp:emptyText="@string/add_menu_url"
                yelp:position="bottom|left"
                style="@style/ButtonFullBleed.WithArrow" />
        </LinearLayout>

        <TextView
            android:text="@string/notes"
            style="@style/Widget.TextView.ListSeparatorYelp.GrayBackground" />

        <com.yelp.android.ui.activities.mutatebiz.Field
            android:id="@+id/notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            yelp:emptyText="@string/notes_for_the_yelp_team"
            yelp:position="bottom|left"
            style="@style/ButtonFullBleed.WithArrow" />
    </LinearLayout>
</ScrollView>