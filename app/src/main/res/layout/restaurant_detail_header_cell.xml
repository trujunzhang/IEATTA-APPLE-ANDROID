<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.White.NoScrollCache"
    android:layout_width="match_parent"
    android:layout_height="@dimen/RestaurantDetail_Header"
    android:orientation="vertical">

    <!--info panel-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="@color/red"
            android:layout_marginTop="8dp">

        </LinearLayout>

        <!--Name Label-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="@string/Add_Event"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/business_review_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/user_photo"
            android:contentDescription="@null"
            android:src="@drawable/business_stars_medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <View
        android:id="@+id/divideHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/businesspage_divider_background" />


    <!--buttonsView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        style="@style/Widget.ListView.White.NoScrollCache">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Add_Event"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textAlignment="center"
                android:gravity="center_vertical"/>


        </LinearLayout>

        <View
            android:id="@+id/first_divider"
            android:layout_width="@dimen/border"
            android:layout_height="fill_parent"
            android:background="@drawable/businesspage_divider_background" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Add_Event"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:id="@+id/second_divider"
            android:layout_width="@dimen/border"
            android:layout_height="fill_parent"
            android:background="@drawable/businesspage_divider_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Add_Event"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>