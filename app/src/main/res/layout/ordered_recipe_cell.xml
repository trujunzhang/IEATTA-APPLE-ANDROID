<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.White.NoScrollCache"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NearRestaurant_Restaurants">

    <com.ieatta.android.extensions.viewkit.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/Left_Image_View_Width"
        android:layout_height="@dimen/Left_Image_View_Height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_radio_off_pressed" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Medium Text"
        android:textAppearance="@style/TitleText" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Medium Text"
        android:textAppearance="@style/SubtitleGrayText" />

    <com.ieatta.android.extensions.viewkit.RatingImageView
        android:id="@+id/business_review_star_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:src="@drawable/business_stars"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>